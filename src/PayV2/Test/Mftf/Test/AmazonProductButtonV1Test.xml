<?xml version="1.0" encoding="UTF-8"?>
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AmazonProductButtonV1">
        <annotations>
            <stories value="Amazon Button"/>
            <title value="Only Amazon Button V1 should be present on product page when enabled."/>
            <description value="Only Amazon Button V1 should be present on product page when enabled."/>
            <severity value="CRITICAL"/>
            <group value="amazon_pay_v2"/>
            <group value="amazon_pay_v2_button"/>
        </annotations>

        <before>
            <createData entity="SimpleTwo" stepKey="createSimpleProduct"/>
            <createData entity="SampleAmazonPaymentV1Config" stepKey="SampleAmazonPaymentV1ConfigData"/>
            <magentoCLI command="config:set {{AmazonButtonProductConfig.path}} 1" stepKey="displayAmazonButtonProduct"/>
            <magentoCLI command="cache:flush" stepKey="flushCache"/>
        </before>

        <!--Go to product page-->
        <actionGroup ref="StorefrontOpenProductPageActionGroup" stepKey="openProductStoreFront">
            <argument name="productUrl" value="$$createSimpleProduct.custom_attributes[url_key]$$"/>
        </actionGroup>
        <!--Verify only Amazon Button V1 is present-->
        <seeElement selector="{{AmazonButtonSection.v1Product}}" stepKey="seeEnabledAmazonButton"/>
        <dontSeeElement selector="{{AmazonButtonSection.v2Product}}" stepKey="dontSeeDisabledAmazonButton"/>
    </test>
</tests>
